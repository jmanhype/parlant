{
  "name": "poetry3-poetry-pyenv",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // "features": {},

  // ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "(cd /workspaces/emcie && git config --global --add safe.directory /workspaces/emcie && python ./initialize_repo.py)",

  // ðŸ‘‡ Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "njpwerner.autodocstring",
        "github.remotehub",
        "GitHub.vscode-pull-request-github",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "zeshuaro.vscode-python-poetry",
        "hbenl.vscode-test-explorer",
        "alexkrechik.cucumberautocomplete",
        "matangover.mypy",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml"
      ]
    }
  },
  // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  "features": {
    "node": {
        "version": "lts",
        "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers-contrib/features/mypy:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "latest"
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/../common,target=/workspaces/common,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/../sdk,target=/workspaces/sdk,type=bind,consistency=cached"
  ]

  // ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
